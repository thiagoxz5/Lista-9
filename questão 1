#include <string.h>
#include <iostream>

using namespace std;
class Equipamento {
  public: 
  bool ligado;
  void liga() {
    printf("O equipamento está ligado!\n");
    ligado = true;
  };
  void desliga() {
    printf("O equipamento está desligado!");
    ligado = false;
  }
  Equipamento () {  }
};

class EquipamentoSonoro : public Equipamento {
  public:
  short volume;
  bool stereo;
  void setVolume (short volume) {this->volume = volume;}
  short getVolume () {
    return volume;
  }
  void setStereo (bool stereo) {this->stereo = stereo;}
  bool getStereo () {
    return stereo;
  }
  void mono () {
    stereo = false;
  }
   void estereo () {
     stereo = true;
   }
  EquipamentoSonoro () : Equipamento () { volume = 5; }
};

int main() {
  EquipamentoSonoro JBL;
  JBL.getVolume();
  printf("%i\n", JBL.getVolume());
  JBL.liga();
  JBL.desliga();
}
